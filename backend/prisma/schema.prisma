  IN_STOCK
  LOW_STOCK
  OUT_OF_STOCK
  BACKORDER
}

enum OrderStatus {
  PENDING
  CONFIRMED
  PROCESSING
  SHIPPED
  DELIVERED
  CANCELLED
  REFUNDED
}

